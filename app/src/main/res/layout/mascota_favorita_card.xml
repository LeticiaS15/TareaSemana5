<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20sp"
    android:layout_marginRight="20sp"
    android:layout_marginLeft="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFVCV"
            android:layout_width="387dp"
            android:layout_height="281dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gato"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingStart="10sp"
                android:id="@+id/NombreFVCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombreMascotaCV"
                android:textSize="25sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/LikesFVCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LikesCV"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgHuesoFVCV"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="10sp"/>

                <ImageView
                    android:id="@+id/imgHuesoFVCV"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_hueso"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>